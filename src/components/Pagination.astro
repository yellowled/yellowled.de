---
const { prev, next } = Astro.props;
---

<nav>
    <ul role="list">
        {
            prev && (
                <li class="prev">
                    <a href={prev}>Neuere Einträge</a>
                </li>
            )
        }
        {
            next && (
                <li class="next">
                    <a href={next}>Ältere Einträge</a>
                </li>
            )
        }
    </ul>
</nav>

<style>
    ul {
        display: flex;
        justify-content: space-between;
        list-style: none;
        padding-inline-start: 0;
    }

    li {
        flex: 0 1 auto;
    }

    .prev {
        margin-inline-end: auto;
    }

    .prev::before {
        content: "← ";
    }

    .next {
        margin-inline-start: auto;
    }

    .next::after {
        content: " →";
    }
</style>
