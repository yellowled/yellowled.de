<!DOCTYPE html>
<html lang="{{ meta.lang }}">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{ title }} | {{ meta.title }}</title>
    {% include "meta.njk" %}
    {% include "favicons.njk" %}
    <link rel="stylesheet" href="{{ '/scss/main.scss' | url }}">
    <script>!function(){var e=localStorage.getItem("user-color-scheme");e&&document.documentElement.setAttribute("data-user-color-scheme",e)}();</script>
</head>
<body>
    {% include "header.njk" %}

    <main>
    {% block content %}{% endblock content %}
    </main>

    {% include "footer.njk" %}

    <script type="module" src="{{ '/js/main.js' | url }}"></script>
</body>
</html>
