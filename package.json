{
    "name": "yellowled.de",
    "version": "2.0.0",
    "description": "My website",
    "scripts": {
        "build": "npm-run-all --sequential clean --parallel build:js build:scss --sequential build:eleventy",
        "build:eleventy": "ELEVENTY_ENV=production eleventy",
        "build:js": "npm-run-all --sequential compile:js minify:js",
        "build:scss": "npm-run-all --sequential compile:scss minify:scss",
        "clean": "del-cli _site",
        "compile:js": "rollup -c",
        "compile:scss": "sass --source-map-urls=absolute src/scss/main.scss _site/css/main.css",
        "lint:js": "eslint src/js/**/*",
        "lint:scss": "stylelint --syntax scss src/scss/**/*.scss",
        "minify:js": "terser -c -m --source-map content=_site/js/main.js.map,includeSources,url=main.js.map -o _site/js/main.js -- _site/js/main.js",
        "minify:scss": "postcss --config .postcssrc.json _site/css/main.css -r",
        "start": "npm run watch",
        "watch": "npm-run-all --sequential clean --parallel watch:*",
        "watch:eleventy": "ELEVENTY_ENV=development eleventy --serve",
        "watch:js": "rollup -c --watch",
        "watch:scss": "sass --watch --source-map-urls=absolute src/scss/main.scss _site/css/main.css",
        "test": "npm-run-all --sequential lint:js lint:scss"
    },
    "dependencies": {
        "core-js": "^3.18.2",
        "luxon": "^2.0.2",
        "when-dom-ready": "^1.2.12"
    },
    "devDependencies": {
        "@11ty/eleventy": "^0.12.1",
        "@11ty/eleventy-navigation": "^0.3.2",
        "@11ty/eleventy-plugin-rss": "^1.1.2",
        "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
        "@babel/core": "^7.15.8",
        "@babel/preset-env": "^7.15.8",
        "@rollup/plugin-babel": "^5.3.0",
        "@rollup/plugin-commonjs": "^21.0.0",
        "@rollup/plugin-node-resolve": "^13.0.5",
        "autoprefixer": "^10.3.7",
        "critical": "^4.0.1",
        "cssnano": "^5.0.8",
        "del-cli": "^4.0.1",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "html-minifier": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.3.9",
        "postcss-cli": "^9.0.1",
        "postcss-flexbugs-fixes": "^5.0.2",
        "prettier": "^2.4.1",
        "rollup": "^2.58.0",
        "sass": "^1.42.1",
        "stylelint": "^13.13.1",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-recommended-scss": "^4.3.0",
        "stylelint-config-standard": "^22.0.0",
        "stylelint-scss": "^3.21.0",
        "terser": "^5.9.0"
    },
    "author": "Matthias Mees",
    "license": "MIT",
    "engines": {
        "node": "^16"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:yellowled/yellowled.de.git"
    }
}
