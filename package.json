{
    "name": "yellowled.de",
    "version": "2.0.0",
    "description": "My website",
    "scripts": {
        "build": "npm-run-all --sequential clean --parallel build:js build:scss --sequential build:eleventy",
        "build:eleventy": "ELEVENTY_ENV=production eleventy",
        "build:js": "npm-run-all --sequential compile:js minify:js",
        "build:scss": "npm-run-all --sequential compile:scss minify:scss",
        "clean": "del-cli _site",
        "compile:js": "rollup -c",
        "compile:scss": "sass --source-map-urls=absolute src/scss/main.scss _site/css/main.css",
        "lint:js": "eslint src/js/**/*",
        "lint:scss": "stylelint src/scss/**/*.scss",
        "minify:js": "terser -c -m --source-map content=_site/js/main.js.map,includeSources,url=main.js.map -o _site/js/main.js -- _site/js/main.js",
        "minify:scss": "postcss --config .postcssrc.json _site/css/main.css -r",
        "start": "npm run watch",
        "watch": "npm-run-all --sequential clean --parallel watch:*",
        "watch:eleventy": "ELEVENTY_ENV=development eleventy --incremental --quiet --serve",
        "watch:js": "rollup -c --watch",
        "watch:scss": "sass --watch --source-map-urls=absolute src/scss/main.scss _site/css/main.css",
        "test": "npm-run-all --sequential lint:js lint:scss"
    },
    "dependencies": {
        "core-js": "^3.26.1",
        "luxon": "^3.1.1",
        "when-dom-ready": "^1.2.12"
    },
    "devDependencies": {
        "@11ty/eleventy": "^1.0.2",
        "@11ty/eleventy-img": "^2.0.1",
        "@11ty/eleventy-navigation": "^0.3.5",
        "@11ty/eleventy-plugin-rss": "^1.2.0",
        "@11ty/eleventy-plugin-syntaxhighlight": "^4.2.0",
        "@babel/core": "^7.20.5",
        "@babel/preset-env": "^7.20.2",
        "@rollup/plugin-babel": "^6.0.3",
        "@rollup/plugin-commonjs": "^24.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "autoprefixer": "^10.4.13",
        "cssnano": "^5.1.14",
        "del-cli": "^5.0.0",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "html-minifier": "^4.0.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.20",
        "postcss-cli": "^10.1.0",
        "postcss-flexbugs-fixes": "^5.0.2",
        "prettier": "^2.8.1",
        "rollup": "^3.7.5",
        "sass": "^1.57.0",
        "stylelint": "^14.16.0",
        "stylelint-config-prettier": "^9.0.4",
        "stylelint-config-standard-scss": "^6.1.0",
        "terser": "^5.16.1"
    },
    "author": "Matthias Mees",
    "license": "MIT",
    "engines": {
        "node": "^16"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:yellowled/yellowled.de.git"
    }
}
